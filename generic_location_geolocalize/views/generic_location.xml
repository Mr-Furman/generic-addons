<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="generic_location_form_view" model="ir.ui.view">
        <field name="model">generic.location</field>
        <field name="inherit_id" ref="generic_location.generic_location_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='geo_coordinates']" position="before">
                <div colspan="2" class="d-flex">
                    <button string="Geolocalize"
                            name="geo_localize"
                            type="object"
                            style="display: flex; align-items: center;"
                            icon="fa-check"/>
                    <field name="geolocation_json"
                           widget="map_widget"
                           class="mb-0 ml-2"
                           nolabel="1"
                           options="{'zoom': 18, 'maxZoom': 20}"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
